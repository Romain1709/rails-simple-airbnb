<p style="color: green"><%= notice %></p>

<h1>Flats</h1>

<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-3 g-4" id="flats">
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card h-100">
          <img src="https://source.unsplash.com/600x400/?apartment,house" class="card-img-top" alt="<%= flat.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description.truncate(100) %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Price:</strong> $<%= flat.price_per_night %> per night</li>
            <li class="list-group-item"><strong>Guests:</strong> <%= flat.number_of_guests %></li>
          </ul>
          <div class="card-footer text-muted">
            <%= flat.address %>
          </div>
          <div class="card-body">
            <%= link_to "Show this flat", flat, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "New flat", new_flat_path, class: "btn btn-success" %>
  </div>
</div>
